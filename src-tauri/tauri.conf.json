{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm vite build",
    "beforeDevCommand": "pnpm vite dev",
    "devPath": "http://localhost:1420/",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "ark-shelf-desktop",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true
    },
    "cli": {
        "description": "Ark Shelf Desktop cli command",
        "longDescription": "CLI command prior running Ark Shelf Desktop GUI",
        "beforeHelp": "",
        "afterHelp": "",
        "args": [
            {
                "name": "path",
                "takesValue": true
            },
            {
                "name": "ladd"
            }
        ],
        "subcommands": {
            "link": {
                "subcommands": {
                    "add": {
                        "args": [
                            {
                                "name": "add",
                                "takesValue": true,
                                "multiple": true
                            }
                        ]
                    }
                }
            }
        }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "ark-shelf-desktop",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": true,
        "title": "ARK Shelf Desktop",
        "width": 800
      }
    ]
  }
}
