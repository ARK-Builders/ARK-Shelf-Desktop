{
    "env": {
        "node": true,
        "es2021": true
    },
    "root": true,
    "plugins": ["@typescript-eslint"],
    "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": [
            "error",
            { "ignoreRestSiblings": true, "argsIgnorePattern": "(^_)" }
        ]
    }
}
